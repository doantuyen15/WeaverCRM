{
	"name": "crm-weaver",
	"description": "CRM Weaver",
	"repository": {
		"type": "git",
		"url": "https://github.com/doantuyen15/WeaverCRMrelease"
	},
	"publish": {
		"provider": "github",
		"releaseType": "draft"
	},
	"license": "GPL-3.0",
	"version": "1.0.17",
	"private": true,
	"devDependencies": {
		"@types/node": "^18.11.10",
		"@types/react": "^18.0.26",
		"@types/react-dom": "^18.0.9",
		"@types/react-router-dom": "^5.3.3",
		"autoprefixer": "^10.4.13",
		"concurrently": "^8.0.1",
		"cross-env": "^7.0.3",
		"electron": "^22.0.0",
		"electron-builder": "^23.6.0",
		"postcss": "^8.4.19",
		"prettier": "^2.8.0",
		"react-scripts": "^5.0.1",
		"rimraf": "^3.0.2",
		"tailwindcss": "^3.4.1",
		"taze": "^0.8.4",
		"typescript": "^4.9.3",
		"wait-on": "^6.0.1"
	},
	"dependencies": {
		"@electron/remote": "^2.0.8",
		"@emotion/react": "^11.11.3",
		"@emotion/styled": "^11.11.0",
		"@fontsource/roboto": "^5.0.8",
		"@headlessui/react": "^1.7.18",
		"@heroicons/react": "2.0.18",
		"@material-tailwind/react": "^2.1.8",
		"@mui/icons-material": "^5.15.10",
		"@mui/material": "^5.15.10",
		"@mui/styled-engine-sc": "^6.0.0-alpha.16",
		"@mui/x-date-pickers": "^6.19.4",
		"auto-launch": "^5.0.5",
		"electron-is-dev": "^2.0.0",
		"electron-notarize": "^1.2.2",
		"electron-reloader": "^1.2.3",
		"electron-updater": "^5.3.0",
		"exceljs": "^4.4.0",
		"firebase": "^10.8.0",
		"firebase-admin": "^12.0.0",
		"lodash": "^4.17.21",
		"moment": "^2.30.1",
		"react": "^18.2.0",
		"react-datepicker": "^5.0.0",
		"react-dom": "^18.2.0",
		"react-icons": "^4.7.1",
		"react-input-mask": "^2.0.4",
		"react-pro-sidebar": "1.1.0-alpha.1",
		"react-router-dom": "^6.4.4",
		"react-toastify": "^9.1.1",
		"react-use": "^17.4.0",
		"rxjs": "^7.8.1",
		"styled-components": "^6.1.8"
	},
	"peerDependencies": {
		"react": "^17.0.0 || ^18.0.0",
		"react-dom": "^17.0.0 || ^18.0.0"
	},
	"homepage": "./",
	"main": "public/electron.js",
	"scripts": {
		"dev": "concurrently \"npm run react:dev\" \"npm run electron:wait\"",
		"electron:wait": "wait-on tcp:3000 && npm run electron:dev",
		"prebuild": "rimraf build && rimraf dist",
		"react:build": "react-scripts build",
		"react:dev": "cross-env BROWSER=none react-scripts start",
		"electron:build": "electron-builder build --mac --publish never",
		"electron:deploy-win": "electron-builder build --win --publish always",
		"electron:deploy-mac": "electron-builder build --mac --publish always",
		"electron:deploy": "electron-builder build -mwl --publish always",
		"electron:dev": "electron .",
		"build": "npm run react:build && npm run electron:build",
		"deploy": "npm run react:build && npm run electron:deploy",
		"deploy-mac": "npm run react:build && npm run electron:deploy-mac",
		"deploy-win": "npm run react:build && npm run electron:deploy-win",
		"format": "prettier --write .",
		"update": "taze latest -w"
	},
	"author": {
		"name": "Altisss",
		"url": "http://altisss.vn/"
	},
	"build": {
		"productName": "Weaver CRM",
		"appId": "com.altisss.premium",
		"copyright": "Copyright Â© 2020 ${author}",
		"win": {
			"icon": "public/icon.ico"
		},
		"mac": {
			"icon": "public/icon.png",
			"target": [
				"dmg",
				"zip"
			]
		},
		"afterSign": "./scripts/notarize.js"
	},
	"eslintConfig": {
		"extends": [
			"react-app"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
